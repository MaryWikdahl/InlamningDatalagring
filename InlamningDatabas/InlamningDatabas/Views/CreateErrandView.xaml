<UserControl x:Class="InlamningDatabas.Views.CreateErrandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InlamningDatabas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1000">
    <Grid>
        <StackPanel Grid.Column="1" >
            <Label Content="SKAPA ETT ÄRENDE" FontSize="15"/>
            <Label Content="Email"/>
            <TextBox x:Name="tbEmail"  FontSize="15" Margin="10 10" Padding="10" />
            <Label Content="Ärende"/>
            <TextBox x:Name="tbErrand" Grid.Row="1" FontSize="15" Margin="10 10" Padding="10" />
            <Label Content="Beskrivning"/>
            <TextBox x:Name="tbDescription" Grid.Row="1" FontSize="15" Margin="10 10" Padding="10" Height="200" />
           
            

            <Button x:Name="tbButtonCreate" Grid.Row="2"  Margin="10 10" Padding="5" FontSize="18" Content="SKAPA ÄRENDE" Click="tbButtonCreate_Click" Background="#FF6B6565" Foreground="White"  />


        </StackPanel>

    </Grid>
</UserControl>
